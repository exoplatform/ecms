<?xml version="1.0" encoding="ISO-8859-1"?>

<configuration 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
  xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <external-component-plugins>
    <target-component>org.exoplatform.application.registry.ApplicationRegistryService</target-component>
    <component-plugin>
      <name>ecms.portlets.registry</name>
      <set-method>initListener</set-method>
      <type>org.exoplatform.application.registry.ApplicationCategoriesPlugins</type>
      <description>this listener init the portlets are registered in PortletRegister</description>
      <init-params>
        <object-param>
          <name>administration</name>
          <description>description</description>
          <object type="org.exoplatform.application.registry.ApplicationCategory">
            <field name="name">
              <string>Administration</string>
            </field>
            <field name="displayName">
              <string>Administration</string>
            </field>
            <field name="description">
              <string>Applications for administration</string>
            </field>
            <field name="accessPermissions">
              <collection type="java.util.ArrayList" item-type="java.lang.String">
                <value>
                  <string>*:/platform/administrators</string>
                </value>
              </collection>
            </field>
            <field name="applications">
              <collection type="java.util.ArrayList">
                <value>
                  <object type="org.exoplatform.application.registry.Application">
                    <field name="applicationName">
                      <string>ECMAdminPortlet</string>
                    </field>
                    <field name="categoryName">
                      <string>administration</string>
                    </field>
                    <field name="displayName">
                      <string>Content Administration</string>
                    </field>
                    <field name="description">
                      <string>Content Administration.</string>
                    </field>
                    <field name="type">
                      <string>portlet</string>
                    </field>
                    <field name="contentId">
                      <string>ecmadmin/ECMAdminPortlet</string>
                    </field>
                    <field name="accessPermissions">
                      <collection type="java.util.ArrayList" item-type="java.lang.String">
                        <value>
                          <string>*:/platform/administrators</string>
                        </value>
                      </collection>
                    </field>
                  </object>
                </value>
              </collection>
            </field>
          </object>
        </object-param>
        <object-param>
          <name>content</name>
          <description>description</description>
          <object type="org.exoplatform.application.registry.ApplicationCategory">
            <field name="name">
              <string>Content</string>
            </field>
            <field name="displayName">
              <string>Content</string>
            </field>
            <field name="description">
              <string>Applications for content</string>
            </field>
            <field name="accessPermissions">
              <collection type="java.util.ArrayList" item-type="java.lang.String">
                <value>
                  <string>*:/platform/web-contributors</string>
                </value>
              </collection>
            </field>
            <field name="applications">
              <collection type="java.util.ArrayList">
                <value>
                  <object type="org.exoplatform.application.registry.Application">
                    <field name="applicationName">
                      <string>SingleContentViewer</string>
                    </field>
                    <field name="categoryName">
                      <string>content</string>
                    </field>
                    <field name="displayName">
                      <string>Content Detail</string>
                    </field>
                    <field name="description">
                      <string>Single Content Viewer Portlet</string>
                    </field>
                    <field name="type">
                      <string>portlet</string>
                    </field>
                    <field name="contentId">
                      <string>presentation/SingleContentViewer</string>
                    </field>
                    <field name="accessPermissions">
                      <collection type="java.util.ArrayList" item-type="java.lang.String">
                        <value>
                          <string>*:/platform/web-contributors</string>
                        </value>
                      </collection>
                    </field>
                  </object>
                </value>
                <value>
                  <object type="org.exoplatform.application.registry.Application">
                    <field name="applicationName">
                      <string>FileExplorerPortlet</string>
                    </field>
                    <field name="categoryName">
                      <string>content</string>
                    </field>
                    <field name="displayName">
                      <string>Content Explorer</string>
                    </field>
                    <field name="description">
                      <string>Content Explorer</string>
                    </field>
                    <field name="type">
                      <string>portlet</string>
                    </field>
                    <field name="contentId">
                      <string>ecmexplorer/FileExplorerPortlet</string>
                    </field>
                    <field name="accessPermissions">
                      <collection type="java.util.ArrayList" item-type="java.lang.String">
                        <value>
                          <string>*:/platform/web-contributors</string>
                        </value>
                      </collection>
                    </field>
                  </object>
                </value>
                <value>
                  <object type="org.exoplatform.application.registry.Application">
                    <field name="applicationName">
                      <string>ContentListViewerPortlet</string>
                    </field>
                    <field name="categoryName">
                      <string>content</string>
                    </field>
                    <field name="displayName">
                      <string>Content List</string>
                    </field>
                    <field name="description">
                      <string>Content List</string>
                    </field>
                    <field name="type">
                      <string>portlet</string>
                    </field>
                    <field name="contentId">
                      <string>presentation/ContentListViewerPortlet</string>
                    </field>
                    <field name="accessPermissions">
                      <collection type="java.util.ArrayList" item-type="java.lang.String">
                        <value>
                          <string>*:/platform/web-contributors</string>
                        </value>
                      </collection>
                    </field>
                  </object>
                </value>
                <value>
                  <object type="org.exoplatform.application.registry.Application">
                    <field name="applicationName">
                      <string>ContentListViewerByQueryPortlet</string>
                    </field>
                    <field name="categoryName">
                      <string>content</string>
                    </field>
                    <field name="displayName">
                      <string>Content By Query</string>
                    </field>
                    <field name="description">
                      <string>Content List Viewer By Query</string>
                    </field>
                    <field name="type">
                      <string>portlet</string>
                    </field>
                    <field name="contentId">
                      <string>presentation/ContentListViewerByQueryPortlet</string>
                    </field>
                    <field name="accessPermissions">
                      <collection type="java.util.ArrayList" item-type="java.lang.String">
                        <value>
                          <string>*:/platform/administrators</string>
                        </value>
                      </collection>
                    </field>
                  </object>
                </value>
              </collection>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
</configuration>
