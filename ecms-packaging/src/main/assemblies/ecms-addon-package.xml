<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>ecms-addon</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <!-- Wars -->
    <dependencySet>
      <outputDirectory>/webapps</outputDirectory>
      <includes>
        <include>org.exoplatform.ecms:*:war</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>${artifact.build.finalName}.${artifact.extension}</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    <!-- libs and its dependencies -->
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>org.exoplatform.ecms:*:jar</include>
        <include> org.icepdf.os:icepdf-core:jar</include>
        <include>com.sun.media:jai-codec:jar</include>
        <include>com.sun.media:jai-core:jar</include>
		<include>com.ibm.icu:icu4j:jar</include>
      </includes>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
      <useProjectArtifact>false</useProjectArtifact>
      <scope>provided</scope>
    </dependencySet>
  </dependencySets>
</assembly>
