<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>ecms-core</artifactId>
    <groupId>org.exoplatform.ecms</groupId>
    <version>6.0.x-SNAPSHOT</version>
  </parent>
  <artifactId>ecms-core-webui-clouddrives</artifactId>
  <packaging>jar</packaging>
  <name>eXo PLF:: ECMS Integration</name>
  <description>eXo Cloud Drive extension integration in eXo WCM (ECMS)</description>

  <dependencies>
    <!-- WebUI -->
    <dependency>
      <groupId>org.exoplatform.commons</groupId>
      <artifactId>commons-webui-ext</artifactId>
      <scope>provided</scope>
      <type>jar</type>
    </dependency>

    <!-- ECMS -->
    <!-- ECMS's NodeFinder here -->
    <dependency>
      <groupId>org.exoplatform.ecms</groupId>
      <artifactId>ecms-core-services</artifactId>
      <scope>provided</scope>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.ecms</groupId>
      <artifactId>ecms-core-webui-explorer</artifactId>
      <scope>provided</scope>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.ecms</groupId>
      <artifactId>ecms-core-webui</artifactId>
      <scope>provided</scope>
      <type>jar</type>
    </dependency>

    <!-- Social for sharing in spaces -->
    <dependency>
      <groupId>org.exoplatform.social</groupId>
      <artifactId>social-component-core</artifactId>
      <scope>provided</scope>
      <type>jar</type>
    </dependency>

    <!-- Platform apps integrations -->
    <dependency>
      <groupId>org.exoplatform.ecms</groupId>
      <artifactId>ecms-social-integration</artifactId>
      <scope>provided</scope>
      <type>jar</type>
    </dependency>
    
  </dependencies>

  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.properties</include>
          <include>**/*.gtmpl</include>
        </includes>
      </resource>
    </resources>
  </build>
</project>
