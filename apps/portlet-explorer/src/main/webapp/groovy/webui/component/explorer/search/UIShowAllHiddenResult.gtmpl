<% 
  import org.exoplatform.ecm.webui.utils.Utils;
  import org.exoplatform.services.jcr.impl.core.JCRPath;
  import org.exoplatform.services.jcr.impl.core.SessionImpl;
  import org.exoplatform.web.application.Parameter ;  
  import javax.jcr.Node;
  import javax.jcr.Session;
%>
<% 
  def hiddenNodesList = uicomponent.getAllHiddenNodes(); 
  if(hiddenNodesList == null) return;
  def rcontext = _ctx.getRequestContext();
  rcontext.getJavascriptManager().importJavascript('eXo.ecm.UIJCRExplorer','/ecmexplorer/javascript/');
  rcontext.getJavascriptManager().importJavascript('eXo.ecm.ECMUtils','/ecm-wcm-extension/javascript/');
  java.text.DateFormat dateFormat = uicomponent.getSimpleDateFormat();
  int totalPages = uicomponent.getUIPageIterator().getAvailablePage();
%>

<div class="UIShowAllHiddenResult" id="$uicomponent.id">
  <table class="UIGrid" style="width: 97%">
    <thead>
      <tr>
        <th width="45px">
          <%
            if (uicomponent.iconType.equals("BlueUpArrow")) {
          %>
            <div onclick="<%=uicomponent.event("SortASC", Utils.formatNodeName("type"))%>" title="<%=_ctx.appRes("UIShowAllHiddenResult.title.typeASC")%>">
              <%=_ctx.appRes("UIShowAllHiddenResult.header.type")%>
              <img src="/eXoResources/skin/sharedImages/Blank.gif" alt="<%=_ctx.appRes("UIShowAllHiddenResult.title.typeASC")%>" class="BlueUpArrow16x16Icon" />
            </div>
          <%
            } else if (uicomponent.iconType.equals("BlueDownArrow")) {
          %>
          <div onclick="<%=uicomponent.event("SortDESC", Utils.formatNodeName("type"))%>" title="<%=_ctx.appRes("UIShowAllHiddenResult.title.typeDESC")%>">
            <%=_ctx.appRes("UIShowAllHiddenResult.header.type")%>
            <img src="/eXoResources/skin/sharedImages/Blank.gif" alt="<%=_ctx.appRes("UIShowAllHiddenResult.title.typeDESC")%>" class="BlueDownArrow16x16Icon" />
          </div>
          <%
            } else {
          %>
            <div onclick="<%=uicomponent.event("SortASC", Utils.formatNodeName("type"))%>" title="<%=_ctx.appRes("UIShowAllHiddenResult.title.typeASC")%>">
              <%=_ctx.appRes("UIShowAllHiddenResult.header.type")%>                
            </div>
          <% } %>
        </th>
        <th>
          <%
            if (uicomponent.iconName.equals("BlueUpArrow")) {
          %>
            <a href="<%=uicomponent.event("SortASC", Utils.formatNodeName("name"))%>" title="<%=_ctx.appRes("UIShowAllHiddenResult.title.nameASC")%>">
              <%=_ctx.appRes("UIShowAllHiddenResult.header.name")%>
              <img src="/eXoResources/skin/sharedImages/Blank.gif" alt="<%=_ctx.appRes("UIShowAllHiddenResult.title.nameASC")%>" class="BlueUpArrow16x16Icon"/>
            </a>
          <%
            } else if (uicomponent.iconName.equals("BlueDownArrow")) {
          %>
          <a href="<%=uicomponent.event("SortDESC", Utils.formatNodeName("name"))%>" title="<%=_ctx.appRes("UIShowAllHiddenResult.title.nameDESC")%>">
            <%=_ctx.appRes("UIShowAllHiddenResult.header.name")%>
            <img src="/eXoResources/skin/sharedImages/Blank.gif" alt="<%=_ctx.appRes("UIShowAllHiddenResult.title.nameDESC")%>" class="BlueDownArrow16x16Icon"/>
          </a>
          <%
            } else {
          %>
            <a href="<%=uicomponent.event("SortASC", Utils.formatNodeName("name"))%>" title="<%=_ctx.appRes("UIShowAllHiddenResult.title.nameASC")%>">
              <%=_ctx.appRes("UIShowAllHiddenResult.header.name")%>         
            </a>
          <% } %>        
        </th>   
        <th style="width:80px;"><%=_ctx.appRes("UIShowAllHiddenResult.header.action")%></th>
      </tr>
    </thead>

    
    
    <tbody>
    <%
      def rowClass = null ;
      boolean even = true ;
      int count = 0;
//      map.clear();
      if (hiddenNodesList != null && hiddenNodesList.size() > 0) {
        for (node in hiddenNodesList) {
          if (even) rowClass = "EvenRow";  
          else rowClass =  "OddRow"; 
          even = !even;
          String nodePath = node.getPath();
          if (node.getPrimaryNodeType().getName().equals("nt:resource")) {
            node = node.getParent();
            nodePath = node.getPath();
          }
         
          //String excerpt = row.getValue("rep:excerpt(.)")== null ? "" : row.getValue("rep:excerpt(.)").getString();
          String excerpt = "";
          String s = "";
          
      %>
          <tr class="$rowClass">
                      
            <td>
              <div class="default16x16Icon ItemIcon <%=Utils.getNodeTypeIcon(node, "16x16Icon")%>" style="margin:auto"><span></span></div>
            </td>
            <td>
              <div class="Text" title="<%=dateFormat.format(uicomponent.getDateCreated(node))%>">
                <%=node.getName()%>
              </div>
              <div>$excerpt</div>
              <div><%=_ctx.appRes("UIShowAllHiddenResult.header.path")%>: <%=nodePath%></div>
              <div><%=_ctx.appRes("UIShowAllHiddenResult.header.dateCreated")%>: <%=dateFormat.format(uicomponent.getDateCreated(node))%></div>
            </td>
            <td>
              <div class="ActionContainer">
                <img onclick="<%=uicomponent.event("View", Utils.formatNodeName(node.getPath()))%>" 
                     alt="<%=_ctx.appRes("UIShowAllHiddenResult.tooltip.View")%>"
                     title="<%=_ctx.appRes("UIShowAllHiddenResult.tooltip.View")%>" 
                     src="/eXoResources/skin/sharedImages/Blank.gif" class="View16x16Icon"/>
                <img onclick="<%=uicomponent.event("RemoveHiddenAttribute", node.getSession().getWorkspace().getName() + ":" + Utils.formatNodeName(node.getPath()))%>"
                     alt="<%=_ctx.appRes("UIShowAllHiddenResult.tooltip.RemoveHiddenAttribute")%>"
                     title="<%=_ctx.appRes("UIShowAllHiddenResult.tooltip.RemoveHiddenAttribute")%>"
                     src="/eXoResources/skin/sharedImages/Blank.gif"
                     class = "RemoveHidden16x16Icon"/>
              </div>
            </td>                   
          </tr>
    <%
        }
      } else {
    %>
      <tr class="EvenRow">
        <td colspan="3" style="text-align:center;font-style:italic; color: #EF5604;"><%=_ctx.appRes("UIShowAllHiddenResult.msg.empty")%></td>
      </tr>
    <%}%>
    </tbody>
  </table>
  <% if(totalPages>1){ %>
  <div style="margin:1px 0px 20px 0px;">
    <%_ctx.renderUIComponent(uicomponent.getUIPageIterator())%>
  </div>
  <% } %>
</div>





