  <script type="text/javascript">
			function PublishedDocument() {}
			var prefixUrl = location.protocol + '//' + location.hostname;
			if (location.port) {
				prefixUrl += ':' + location.port;
			}

			var siteUrl = prefixUrl + '/ecmdemo/rest-ecmdemo/publication/presentation/repository/collaboration/state?showItems=5';
			var accessUrl = prefixUrl + '/ecmdemo/private/classic/siteExplorer/repository/';
			
			/**
				* Time to refresh data in client and gadget server
				*/
			var refreshInterval = 60000;
			
			PublishedDocument.prototype.makeRequest = function(url, callback) {
				var params = {};
				params[gadgets.io.RequestParameters.METHOD] = gadgets.io.MethodType.GET;
				params[gadgets.io.RequestParameters.CONTENT_TYPE] = gadgets.io.ContentType.JSON;
				var ts = new Date().getTime();
			  var sep = "?";
			  if (refreshInterval && refreshInterval > 0) {
			    ts = Math.floor(ts / refreshInterval);
			  }
			  if (url.indexOf("?") > -1) {
			    sep = "&";
			  }
			 url = [ url, sep, "nocache=", ts ].join("");
				gadgets.io.makeRequest(url, callback, params);
			}
			
			PublishedDocument.prototype.init = function() {
				publishedDocument.makeRequest(siteUrl,publishedDocument.displayValue)
			}
			
			PublishedDocument.prototype.displayValue = function(resp) {
				var data = resp.data.publishedListNode;
				var publishedDocList = _gel("PublishedDocumentList");
				if (publishedDocList) {
					 while (publishedDocList.hasChildNodes()) {
					  	publishedDocList.removeChild(publishedDocList.lastChild);
					  }
				}
				var displayTime = new DisplayTime();
				for (var i = 0; i < data.length; i++) {
					var doc = data[i];
					var AppClass = document.createElement('div');
					var showHTML = "<a target='_top' ";
					if (accessUrl.length > 0 && doc.driveName.length > 0 && doc.path.length > 0) {
						showHTML += "href='";	
						showHTML += accessUrl;
						showHTML += doc.driveName;
						showHTML += doc.path;
						showHTML += "'";
					}
					showHTML += ">";
					showHTML += doc.name;
					showHTML += "</a>";
					showHTML += "<span class='DateTime'>";
					showHTML += displayTime.timeToPrettyString(doc.datePublished);
					showHTML += "</span>";
					AppClass.innerHTML = showHTML;
					AppClass.className = 'ItemIcon';
					publishedDocList.appendChild(AppClass);
				}

				var title = _gel("BgTitle");
				if (data && (data.length > 0) && title) {
					publishedDocList.parentNode.removeChild(title);
				}
				gadgets.window.adjustHeight();
			}
			
			/**
		 	*  Set refresh automatically in refreshInterval seconds
		 	*/
			PublishedDocument.prototype.autoRefresh = function() {
				window.setInterval("publishedDocument.init();", refreshInterval);
			}
			
			var publishedDocument = new PublishedDocument();
	  gadgets.util.registerOnLoadHandler(publishedDocument.init);
	  gadgets.util.registerOnLoadHandler(publishedDocument.autoRefresh);
	  
		</script>

