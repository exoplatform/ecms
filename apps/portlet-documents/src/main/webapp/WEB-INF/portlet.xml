<portlet-app version="2.0"
  xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">

  <portlet>
    <portlet-name>DocumentsPortlet</portlet-name>
    <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
    <init-param>
      <name>portlet-view-dispatched-file-path</name>
      <value>/documents.jsp</value>
    </init-param>
    <init-param>
      <description>List of profiles that can be used to enable this portlet</description>
      <name>exo.profiles</name>
      <value>ecms</value>
    </init-param>
    <init-param>
      <name>preload.resource.bundles</name>
      <value>locale.portlet.documents</value>
    </init-param>
    <init-param>
      <name>preload.resource.rest</name>
      <value><![CDATA[/portal/rest/search/documents/recent?myWork=true&limit=10]]></value>
    </init-param>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <supported-locale>en</supported-locale>
    <resource-bundle>locale.portlet.documents</resource-bundle>
    <portlet-info>
      <title>Documents</title>
    </portlet-info>
    <portlet-preferences>
      <preference>
        <name>appId</name>
        <value></value>
        <read-only>false</read-only>
      </preference>
      <preference>
        <name>query</name>
        <value></value>
        <read-only>false</read-only>
      </preference>
      <preference>
        <name>folder</name>
        <value></value>
        <read-only>false</read-only>
      </preference>
      <preference>
        <name>type</name>
        <value></value>
        <read-only>false</read-only>
      </preference>
      <preference>
        <name>cacheRecentDocuments</name>
        <value>false</value>
        <read-only>false</read-only>
    </preference>
    </portlet-preferences>
  </portlet>

  <portlet>
    <portlet-name>AttachmentApp</portlet-name>
    <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
    <init-param>
      <name>portlet-view-dispatched-file-path</name>
      <value>/html/attachment.html</value>
    </init-param>
    <init-param>
      <name>preload.resource.bundles</name>
      <value>locale.portlet.attachments</value>
    </init-param>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <supported-locale>en</supported-locale>
    <resource-bundle>locale.portlet.attachments</resource-bundle>
    <portlet-info>
      <title>Attachments Application</title>
    </portlet-info>
    <portlet-preferences>
      <preference>
        <name>jsModule</name>
        <value>PORTLET/documents/attachmentApp</value>
      </preference>
    </portlet-preferences>
  </portlet>
</portlet-app>