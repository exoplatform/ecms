<portal-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.gatein.org/xml/ns/gatein_objects_1_2 http://www.gatein.org/xml/ns/gatein_objects_1_2"
  xmlns="http://www.gatein.org/xml/ns/gatein_objects_1_2">

  <portal-name>clouddrives</portal-name>
  <locale>en</locale>
  <access-permissions>*:/platform/users</access-permissions>
  <edit-permission>*:/platform/administrators</edit-permission>
  <skin>Default</skin>

  <properties>
    <entry key="sessionAlive">onDemand</entry>
    <entry key="showPortletInfo">0</entry>
  </properties>

  <portal-layout>
    <container id="ClouddriveSiteContainer" template="system:/groovy/portal/webui/container/UITableColumnContainer.gtmpl">
      <access-permissions>*:/platform/users</access-permissions>
      <container id="ClouddriveSiteBody" template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
        <access-permissions>*:/platform/users</access-permissions>
        <page-body> </page-body>
      </container>
    </container>
  </portal-layout>
</portal-config>
