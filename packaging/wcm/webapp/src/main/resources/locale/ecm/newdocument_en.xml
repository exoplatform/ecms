<?xml version="1.0" encoding="UTF-8"?>
<bundle>
  <!-- For menu caption in Action Bar -->
  <UIActionBar>
    <tooltip>
      <NewDocument>New Document</NewDocument>
    </tooltip>
  </UIActionBar>
  <!-- For new document popup window -->
  <UIPopupWindow>
    <title>
      <UINewDocumentForm>New Document</UINewDocumentForm>
    </title>
  </UIPopupWindow>
   <!-- For new document form -->
  <UINewDocumentForm>
    <action>
      <Cancel>#{word.cancel}</Cancel>
      <Save>Create Document</Save>
    </action>
    <label>
      <titleTextBox>Document Name:</titleTextBox>
      <typeSelectBox>Document Type:</typeSelectBox>
      <option>
        <MicrosoftOfficeDocument>Microsoft Word Document (*.docx)</MicrosoftOfficeDocument>
        <MicrosoftOfficeSpreadsheet>Microsoft Excel Workbook (*.xlsx)</MicrosoftOfficeSpreadsheet>
        <MicrosoftOfficePresentation>Microsoft PowerPoint Presentation (*.pptx)</MicrosoftOfficePresentation>
      </option>
    </label>
    <msg>
      <name-invalid>Please enter the document name.</name-invalid>
      <constraint-violation>You can't add a document of type '{0}' here.</constraint-violation>
      <repository-exception>An unexpected error occurred. Please contact your administrator for more details.</repository-exception>
      <repository-exception-permission>You don't have the permission to add a new document here.</repository-exception-permission>
      <numberformat-exception>You cannot save this document. The name provided must be in numerical format.</numberformat-exception>
      <!--DMS 2.4.x; ECM-3553-->
      <not-allow-sameNameSibling>You can't save the document. An item with the same name already exists.</not-allow-sameNameSibling>
    </msg>
  </UINewDocumentForm>  
</bundle>