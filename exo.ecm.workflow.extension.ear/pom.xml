<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.exoplatform.ecm.workflow</groupId>
    <artifactId>extension</artifactId>
    <version>2.0.0-Beta02-SNAPSHOT</version>
  </parent>

  <groupId>org.exoplatform.ecm.workflow.extension</groupId>
  <artifactId>exo.ecm.workflow.extension.ear</artifactId>
  <packaging>ear</packaging>
  <name>eXo WORKFLOW Extension configuration ear</name>
 
  
  <dependencies>
    <dependency>
      <groupId>org.exoplatform.ecm.workflow.extension</groupId>
      <artifactId>exo.ecm.workflow.extension.config</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.ecm.workflow.extension</groupId>
      <artifactId>exo.ecm.workflow.extension.webapp</artifactId>
      <version>${project.version}</version>
			<type>war</type>
    </dependency>		
  </dependencies>  
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
           <displayName>workflow-extension</displayName>        
           <defaultLibBundleDir>lib</defaultLibBundleDir>
           <modules>
             
             <jarModule>
               <groupId>org.exoplatform.ecm.workflow.extension</groupId>
               <artifactId>exo.ecm.workflow.extension.config</artifactId>
               <includeInApplicationXml>true</includeInApplicationXml>
             </jarModule>           
             <webModule>
               <groupId>org.exoplatform.ecm.workflow.extension</groupId>
               <artifactId>exo.ecm.workflow.extension.webapp</artifactId>
               <contextRoot>workflow</contextRoot>
                <bundleFileName>workflow.war</bundleFileName>
             </webModule>
             
          </modules>
        </configuration>
      </plugin>
    </plugins>  
    <finalName>gatein-exo-workflow-${project.version}</finalName>    
  </build>
</project>
