<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.exoplatform.ecms</groupId>
    <artifactId>exo.ecms</artifactId>
    <version>3.0.0-Beta02-SNAPSHOT</version>
  </parent>
  <groupId>org.exoplatform.ecm</groupId>
  <artifactId>exo.ecm.wcm.extension.ear</artifactId>
  <packaging>ear</packaging>
  <name>eXo WCM Extension EAR</name>
  <description>eXo WCM Extension EAR's configuration</description>
  <dependencies>
    <dependency>
      <groupId>org.exoplatform.ecm</groupId>
      <artifactId>exo.ecm.wcm.extension.config</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.ecm</groupId>
      <artifactId>exo.ecm.wcm.extension.war</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
  </dependencies>
  <build>
    <finalName>gatein-exo-wcm-${project.version}</finalName>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
          <displayName>ecm-wcm-extension</displayName>
          <defaultLibBundleDir>lib</defaultLibBundleDir>
          <modules>
            <jarModule>
              <groupId>org.exoplatform.ecm</groupId>
              <artifactId>exo.ecm.wcm.extension.config</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>
            <webModule>
              <groupId>org.exoplatform.ecm</groupId>
              <artifactId>exo.ecm.wcm.extension.war</artifactId>
              <contextRoot>wcm</contextRoot>
              <bundleFileName>wcm.war</bundleFileName>
            </webModule>
          </modules>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
